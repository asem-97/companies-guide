            newInput.innerHTML = '<input type="phone" class="form-control" name="phone[]" placeholder="Ø£Ø¯Ø®Ù„ Ø§Ù„Ø±Ù‚Ù…"><br>';
            divInput.appendChild(newInput);
        }
